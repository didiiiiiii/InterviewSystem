@model InterviewSystem.Web.ViewModels.Home.AdministrationViewModel
@{
    ViewBag.Title = "Administration Panel";
}

<ul>
    @if (HttpContext.Current.User.IsInRole("Senior Developer") || HttpContext.Current.User.IsInRole("Technical Lead"))
    {
        <li>@Html.ActionLink("Manage Questions", "Index", "Questions", new { area = string.Empty }, null)</li>
    }

    @if (HttpContext.Current.User.IsInRole("Technical Lead"))
    {
        <li>@Html.ActionLink("Generate a questionnaire", "Index", "Questionnaire", new { area = string.Empty }, null)</li>
    }
</ul>
